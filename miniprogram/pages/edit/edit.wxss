.container {
  padding: 20rpx;
}

.post-area {
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.add-icon {
  width: 54rpx;
  height: 54rpx;
}

.image-wrap {
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.selectphoto {
  border: 1px dashed #dedede;
  display: flex;
  justify-content: center;
  align-items: center;
}

.close-icon {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 10rpx;
}

.footer {
  display: flex;
  align-items: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #f1f1f1;
  box-sizing: border-box;
  padding: 20rpx;
}

.words-count {
  flex: 1;
  text-align: right;
  color: #474747;
  font-size: 32rpx;
  padding-right: 30rpx;
}

.send {
  background-color: #d43c33;
  color: #fff;
  font-size: 24rpx;
  margin-right: 20rpx;
  width: 150rpx !important;
}

.image {
  width: 100%;
  height: 100%;
}