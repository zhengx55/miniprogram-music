.modal {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 99;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.6);
}

.panel {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  min-height: 300rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.close-icon {
  width: 36rpx;
  height: 36rpx;
  margin-top: 10rpx;
  margin-left: auto;
  margin-right: 20rpx;
  padding: 10rpx;
}