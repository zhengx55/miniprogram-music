.playlist-container {
  width: 220rpx;
  position: relative;
  padding-bottom: 20px;
  margin: 0 15rpx;
}

.playlist-image {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}

.playcount {
  padding-left: 26rpx;
  position: absolute;
  right: 10rpx;
  gap: 10rpx;
  top: 10rpx;
  display: flex;
  align-items: center;
}

.playcount-text {
  font-size: 24rpx;
  color: #fff;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 1);
}

.headset {
  width: 35rpx;
  height: auto;
  z-index: 99;
}

.name {
  font-size: 26rpx;
  line-height: 1.2;
  padding: 2px 0 0 6px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}