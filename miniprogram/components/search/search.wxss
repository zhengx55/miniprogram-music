.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.search-icon{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  left: 15rpx;
}

.bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}

.search-button {
  background-color: #d43c33;
  color: #fff;
  margin-left: 20rpx !important;
  font-size: 24rpx;
  width: max-content !important;
}

.bar-placeholder {
  color: #999
}